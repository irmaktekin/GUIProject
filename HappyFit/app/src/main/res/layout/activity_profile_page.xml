<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contprof"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context=".ProfilePage">

    <ImageView
        android:id="@+id/imageView"

        android:layout_width="400dp"
        android:layout_height="239dp"
        android:layout_marginTop="28dp"
        android:background="@mipmap/profpic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <ImageButton
        android:id="@+id/exprog"
        android:layout_width="114dp"
        android:layout_height="73dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="24dp"
        android:background="@mipmap/muscle"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/exprogramme"
        app:layout_constraintStart_toEndOf="@+id/friends3" />

    <ImageButton
        android:id="@+id/profcont"
        android:layout_width="136dp"
        android:layout_height="91dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="204dp"
        android:background="@mipmap/forum"

        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/contprof"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/friends3"
        android:layout_width="136dp"
        android:layout_height="91dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="300dp"


        android:background="@mipmap/friends"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/diet"
        android:layout_width="136dp"
        android:layout_height="91dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="76dp"
        android:background="@mipmap/diet"
        android:clickable="true"
        android:contentDescription="@string/dietprog"
        android:focusable="true"
        app:layout_constraintBottom_toTopOf="@+id/watch"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/watch"
        android:layout_width="414dp"
        android:layout_height="90dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/backgorundbutton"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/trainingvideos"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dietprog"
        android:layout_width="214dp"
        android:textColor="@color/colorPrimary"
        android:layout_height="30dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginBottom="44dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/dietprog"
        android:textStyle="bold|italic"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/watch"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/exprogramme"
        android:textColor="@color/colorPrimary"
        android:layout_width="166dp"
        android:layout_height="86dp"
        android:layout_marginTop="160dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/exprog"
        android:textStyle="bold|italic"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/friennds"
        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginLeft="68dp"
        android:layout_marginTop="100dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/friends"
        android:textColor="@color/colorPrimary"
        android:textSize="22sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/friends3" />

    <TextView
        android:id="@+id/forumbutton"
        android:layout_width="136dp"
        android:layout_height="31dp"
        android:textStyle="bold|italic"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="45dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/forum"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/watch"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="140dp"
        android:layout_marginRight="140dp"
        android:text="@string/Welcome"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>